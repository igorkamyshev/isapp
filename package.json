{
  "name": "isapp",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start:back:dev": "NODE_ENV=development nodemon --config ./back/nodemon.json",
    "start:back:debug": "NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart:back:prod": "rimraf dist/back && tsc -p ./back",
    "start:back:prod": "pm2 start ./back/pm2.config.js",
    "start:front:dev": "NODE_ENV=development node front/server.js",
    "prestart:front:prod": "next build ./front",
    "start:front:prod": "pm2 start ./front/pm2.json",
    "build": "rimraf ./dist && yarn prestart:back:prod && yarn prestart:front:prod",
    "lint:code": "tslint {front,back,shared}/**/*.ts{,x} -c tslint.json",
    "lint": "yarn lint:code",
    "pretty": "prettier --write \"{back,front,shared}/**/*.{ts,tsx,js}\""
  },
  "dependencies": {
    "@nestjs/common": "^5.5.0",
    "@nestjs/core": "^5.5.0",
    "@zeit/next-css": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "args-parser": "^1.1.0",
    "express": "^4.16.4",
    "next": "^7.0.2",
    "next-compose-plugins": "^2.1.1",
    "next-routes": "^1.4.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.3.3",
    "tsconfig-paths": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/react": "^16.7.17",
    "babel-plugin-module-resolver": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "pm2": "^3.2.4",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn pretty",
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  }
}
